# Production Environment Configuration
# Copy this file to .env and update the values for your production environment

# Application Configuration
NODE_ENV=production
HTTP_PORT=80
HTTPS_PORT=443

# Frontend Configuration
REACT_APP_API_URL=https://your-domain.com/api
REACT_APP_ENABLE_DEMO_MODE=false
FRONTEND_URL=https://your-domain.com

# Database Configuration
POSTGRES_DB=housing_predictor
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-database-password-here
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PASSWORD=your-secure-redis-password-here
REDIS_PORT=6379

# Security Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-at-least-32-characters-long

# Web Crawler Configuration
CRAWLER_TIMEOUT=60000
CRAWLER_RATE_LIMIT=1000

# News Sources API Keys (optional)
STRAITS_TIMES_API_KEY=
CHANNEL_NEWS_ASIA_API_KEY=
PROPERTY_GURU_API_KEY=

# SSL Configuration (if using HTTPS)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_METRICS=true
METRICS_PORT=9090

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket